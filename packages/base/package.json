{
  "name": "@ui5/webcomponents-react-base",
  "version": "0.7.0-rc.1",
  "description": "Base for ui5-webcomponents-react",
  "main": "index.cjs.js",
  "module": "index.esm.js",
  "types": "index.d.ts",
  "repository": {
    "type": "git",
    "url": "https://github.com/SAP/ui5-webcomponents-react.git",
    "directory": "packages/base"
  },
  "author": "SAP SE (https://www.sap.com)",
  "license": "Apache-2.0",
  "sideEffects": [
    "**/modernizr.js",
    "core-js/**/*"
  ],
  "scripts": {
    "build:copy-third-party": "ncp src/third-party/ ./third-party/",
    "build:rollup": "rollup -c rollup.config.js",
    "build:polyfills": "tsc ./src/polyfill/*.ts --outDir ./polyfill --skipLibCheck",
    "postbuild": "npm-run-all -s build:copy-third-party build:rollup build:polyfills"
  },
  "dependencies": {
    "core-js": "3.1.4",
    "resize-observer-polyfill": "^1.5.1"
  },
  "peerDependencies": {
    "react": "^16.8.0"
  }
}
